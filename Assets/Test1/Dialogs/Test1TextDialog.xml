<CanvasWidget xmlns="runtime-namespace:Game">

  <CanvasWidget Size="620, 420" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <RectangleWidget OutlineThickness="2" />
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 15">

      <LabelWidget Name="Title" Text="" HorizontalAlignment="Center"/>

      <CanvasWidget Margin="20, 15">

        <RectangleWidget FillColor="0, 0, 0, 0" OutlineColor="128, 128, 128, 128" OutlineThickness="1" />

        <ScrollPanelWidget Margin="4, 4" Direction="Vertical">
            <StackPanelWidget Name="Stack" Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
              <LabelWidget Name="Text" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" WordWrap="True" FontScale="0.85"/>
            </StackPanelWidget>
            <StackPanelWidget Name="Stack2" Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </ScrollPanelWidget>

      </CanvasWidget>

      <StackPanelWidget HorizontalAlignment="Center">
        <BevelledButtonWidget Name="OkButton" Text="确定" Style="{Styles/ButtonStyle_160x60}"  />
        <CanvasWidget Size="40,0"/>
        <BevelledButtonWidget Name="CancelButton" Text="关闭" Style="{Styles/ButtonStyle_160x60}"  />
      </StackPanelWidget>

    </StackPanelWidget>

  </CanvasWidget>
</CanvasWidget>
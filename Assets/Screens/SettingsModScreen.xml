<Screen xmlns="runtime-namespace:Game">

	<PanoramaWidget />

	<StackPanelWidget Direction="Horizontal">

		<CanvasWidget Style="{Widgets/TopBarContents}" >
			<LabelWidget Name="TopBar.Label" Text="调整游戏内容设置" />
		</CanvasWidget>

		<CanvasWidget Margin="10, 20">
			<RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="128, 128, 128, 128" />
			<ScrollPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3, 3">
				<StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

					<UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
						<LabelWidget Text="开发者选项:"  HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
						<BevelledButtonWidget Name="CreaterModeButton" Text="" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
					</UniformSpacingPanelWidget>

					<UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
						<LabelWidget Text="更改主题颜色:"  HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
						<BevelledButtonWidget Name="ChangeMainColorButton" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" >
						    <LabelWidget Name="ShowMainUiColorLabel" Text="主题颜色"  HorizontalAlignment="Center" VerticalAlignment="Center" />
						</BevelledButtonWidget>
					</UniformSpacingPanelWidget>

				</StackPanelWidget>
			</ScrollPanelWidget>
		</CanvasWidget>

	</StackPanelWidget>

</Screen>
            <BevelledButtonWidget Name="Button10" Text="" Size="180,60" HorizontalAlignment="Center" VerticalAlignment="Center" />
          </StackPanelWidget>
        </StackPanelWidget>
      </CanvasWidget>
    </StackPanelWidget>


	</CanvasWidget>

</Test1ButtonsPanelWidget>


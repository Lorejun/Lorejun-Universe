        <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
          <!--左边栈界面，方向为竖直-->
          <StackPanelWidget Name="LeftStack" Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            
          </StackPanelWidget>
          <!--右边栈界面，方向为竖直-->
